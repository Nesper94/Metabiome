#!/bin/bash
# Completion script for basic Metabiome commands

_metabiome(){
word=${COMP_WORDS[COMP_CWORD]}

if [ "$COMP_CWORD" -eq 1 ]; then
		COMPREPLY=($(compgen -W "bbduk bowtie2 humann kaiju kraken2 krona megahit metaphlan3 metaquast metaspades qc trimmomatic" "${word}"))
    elif [ "$3" == "-i" ] || [ "$3" == "-o" ]; then
        COMPREPLY=($(compgen -d "${word}"))
fi
}

complete -F _metabiome -o bashdefault -o filenames metabiome
